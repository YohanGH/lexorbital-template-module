{
  "name": "lexorbital-template-module"",
  "version": "0.1.0",
  "description": "Template module for the LexOrbital ecosystem, including conventions, CI setup, documentation structure, and TypeScript scaffold.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
   "files": [
    "dist",
    "lexorbital.module.json"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "fmt": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "keywords": [
    "lexorbital",
    "template",
    "module",
    "typescript",
    "infrastructure",
    "ecosystem"
  ],
  "author": "@YohanGH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YohanGH/lexorbital-template-module"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2"
  }
}
